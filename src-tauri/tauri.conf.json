{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "com.personalanime.app",
  "version": "0.1.85",
  "identifier": "com.personalanime.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "url": "../splashscreen.html",
        "width": 400,
        "height": 300,
        "decorations": false,
        "resizable": false,
        "center": true,
        "alwaysOnTop": true,
        "visible": true,
        "transparent": true
      },
      {
        "title": "My Pal - My Personal Anime List",
        "label": "main",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

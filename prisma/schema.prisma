generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ListStatus {
  TO_WATCH
  WATCHING
  WATCHED
  DO_NOT_WATCH
}

model User {
  id       String @id @default(cuid())
  username String @unique
  avatar   String?
}

model Anime {
  mal_id         Int     @id
  title          String
  title_english  String?
  title_japanese String?
  episodes       Int?
  type           String

  status   ListStatus
  rank     Int?
  synopsis String
  year     Int
  season   String?
  score    Float?

  genres Json
  images Json
}
